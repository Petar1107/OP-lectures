// Napišite funkciju koja stringove, koje korisnik unosi, sprema u vektor stingova,
//svaki string preokrene te sortira vektor po preokrenutim stringovima.

#include <iostream>
#include <vector>
#include <string>
#include <algorithm>

using namespace std;

void input_vector(vector <string>* v, int num_str)
{
	string str;
	for (int i = 0; i < num_str; i++)
	{
		cin >> str;
		reverse(str.begin(), str.end());
		v->push_back(str);
	}
}
void output_vector(vector <string> v)
{
	int velicina = v.size();
	for (int i = 0; i < velicina; i++)
	{
		cout << v[i] << " ";
	}
}
int main(void)
{
	vector <string> v;
	string str;
	int num_str;
	cout << "unesite broj stringova koliko će te unijeti: ";
	cin >> num_str;
	input_vector(&v, num_str);
	sort(v.begin(), v.end());
	cout << "sortirani niz unesenih okrenutih stringova je: " << endl;
	output_vector(v);
	return 0;
}

