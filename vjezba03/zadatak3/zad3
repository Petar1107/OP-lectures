/*Koristeći STL funkcije sortirajte vektor, ubacite 0 ispred najmanjeg elementa, te
sumu svih elemenata iza najvećeg elementa.*/
#include <iostream>
#include <vector>
#include <string>
#include <algorithm>
using namespace std;
void input_vector(vector<int>& v, int el)
{
	int n;
	cout << "unesite brojeve niza: " << endl;
	for (int i = 0; i < el; i++)
	{
		cin >> n;
		v.push_back(n);
	}
}
void sort_vector(vector <int>& v,int el)
{
	int suma = 0;
	int a = 0;
	for (int i = 0; i < el; i++)
	{
		suma = suma + v[i];
	}
	sort(v.begin(), v.end());
	v.insert(v.begin(), a);
	v.push_back(suma);
}
void output_vector(vector<int> v, int el)
{
	for (int i = 0; i < el; i++)
	{
		cout << v[i] << " ";
	}
}
int main(void)
{
	vector<int> v;
	int el;
	cout << "unesite broj clanova niza: " << endl;
	cin >> el;
	input_vector(v,el);
	sort_vector(v,el);
	output_vector(v,v.size());
	return 0;
}
